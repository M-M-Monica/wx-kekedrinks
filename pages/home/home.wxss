.header {
  width: 100%;
  height: 10vh;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  border-bottom: 4rpx solid #f5f5f5;
  z-index: 100;
  background: white;
  text-align: center;
  font-size: 38rpx;
}
.header #drinks {
  flex: 1;
  color: rgb(147,188,185);
}
.header #dessert {
  flex: 1;
  color: rgb(143,153,191);
}
.food-list {
  width: 100%;
  position: absolute;
  list-style: none;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  box-sizing: border-box;
  top: 10vh;
}
.food-block {
  width: 90%;
  height: 100%;
  border: 4rpx solid #edb638;
  border-radius: 40rpx;
  position: relative;
  padding-top: 100rpx;
  margin-top: 80rpx;
}
.food-block image{
  width: 200rpx;
  height: 250rpx;
  position: relative;
  left: 50%;
  transform: translate(-50%,-65%);
}
.food-block .detail{
  width: 100%;
  position: absolute;
  bottom: 3%;
  text-align: center;
  font-size: 36rpx;
}
.food-block .detail p:first-child{
  display: block;
}
.food-block #add{
  width: 64rpx;
  height: 64rpx;
  position: absolute;
  bottom: 2%;
  left: 85%;
  transform: translateX(-50%);
}
.ball{
  position: absolute;
  color: lightsalmon;
  z-index: 300;
}